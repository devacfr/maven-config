<project name="Maven Config" xmlns="http://maven.apache.org/DECORATION/1.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

    <bannerLeft>
        <name><![CDATA[
      <span class="color-highlight">Maven</span> Config
      ]]>
    </name>
        <href>http://devacfr.github.io/maven-config</href>
    </bannerLeft>

    <publishDate position="bottom" format="yyyy-MM-dd" />
    <version position="bottom" />
    <googleAnalyticsAccountId>UA-55015661-1</googleAnalyticsAccountId>

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>${maven-reflow-skin.version}</version>
    </skin>
    <custom>
        <reflowSkin>
            <!-- Make this to 'false' for local development, i.e. file:// URLs -->
            <protocolRelativeURLs>false</protocolRelativeURLs>
            <smoothScroll>true</smoothScroll>
            <theme>default</theme>
            <highlightJs>true</highlightJs>
            <highlightJsTheme>github</highlightJsTheme>
            <absoluteResourceURL>http://devacfr.github.io/maven-config</absoluteResourceURL>
            <brand>
                <!-- Brand text in top-left part of the site -->
                <name>
          <![CDATA[
          <span class="color-highlight">Maven</span> Config
          ]]>
                </name>
                <href>${site.url}</href>
            </brand>
            <slogan>Maven pom default configuration</slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <!-- Use Table of Contents at the top of the page (max 6 elements) -->
            <toc>top</toc>
            <tocTopMax>6</tocTopMax>
            <!-- Include the documentation and tools in the top navigation (in addition to links) -->
            <topNav>Documentation|Contribute|reports</topNav>
            <!-- Split menus in the bottom navigation -->
            <bottomNav maxSpan="9">
                <column>Main</column>
                <column>Contribute</column>
                <column>Documentation</column>
                <column>reports</column>
            </bottomNav>
            <bottomDescription>
        <![CDATA[
          <span class="color-highlight">Maven</span> config is the parent maven pom for all devacfr projects. It defines the default configuration.
        ]]>
            </bottomDescription>
            <pages>
                <index project="maven-config-parent">
                    <!-- Override the title -->
                    <titleTemplate>Maven Config</titleTemplate>
                    <!-- no breadcrumbs on the main index page -->
                    <breadcrumbs>false</breadcrumbs>
                    <!-- no ToC on the main index page -->
                    <toc>false</toc>
                    <markPageHeader>false</markPageHeader>
                    <sections>
                        <columns>2</columns>
                        <body />
                        <sidebar />
                    </sections>
                </index>
                <contribute>
                    <breadcrumbs>false</breadcrumbs>
                </contribute>
                <!-- Disable source highlighting for Maven reports -->
                <source-repository>
                    <highlightJs>false</highlightJs>
                </source-repository>
                <issue-tracking>
                    <highlightJs>false</highlightJs>
                    <toc>false</toc>
                </issue-tracking>
                <license>
                    <highlightJs>false</highlightJs>
                    <toc>false</toc>
                </license>
                <!-- Disable ToC for some Maven reports -->
                <project-info>
                    <toc>false</toc>
                </project-info>
                <github-report>
                    <toc>false</toc>
                </github-report>
                <dependencies>
                    <tocTopMax>4</tocTopMax>
                </dependencies>
            </pages>
        </reflowSkin>
    </custom>

    <body>
        <!-- Add a rel to Google profile for all pages -->
        <head>
            <link rel="author" href="http://plus.google.com/103421057435787675572" />
        </head>

        <links>
            <item name="GitHub project" href="${project.scm.url}" />
        </links>

        <breadcrumbs>
            <item name="Maven Config" href="/index.html" />
        </breadcrumbs>

        <menu name="Main" inherit="top">
            <item name="Home" href="./index.html" />
            <item name="GitHub project" href="${project.scm.url}" />
            <item name="Release notes" href="release-notes.html" />
        </menu>
        <menu name="Documentation" inherit="bottom">
            <item name="Usage" href="doc/index.html" />
            <item name="Configuration" href="doc/config.html" />
            <item name="Tips" href="doc/tips.html" />
        </menu>
        <menu name="Contribute" inherit="bottom">
            <item name="License" href="license.html" />
            <item name="Contribute" href="contribute.html" />
            <item name="Issues" href="${issue.url}" />
            <item name="Fork on GitHub" href="${project.scm.url}" />
        </menu>
        <menu name="Maven documentation" ref="reports" inherit="bottom" />
    </body>
</project>